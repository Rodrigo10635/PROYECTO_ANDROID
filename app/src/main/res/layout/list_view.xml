<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ItemListView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_text_mod">

    <TextView
        android:id="@+id/tituloItem"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/notaItem"
        android:layout_width="180dp"
        android:layout_height="64dp"
        android:layout_below="@+id/tituloItem"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/ubicacionItem"
        android:layout_width="226dp"
        android:layout_height="32dp"
        android:layout_below="@+id/notaItem"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:layout_toStartOf="@+id/botonIrItem"
        android:text="TextView"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/previewImagenItem"
        android:layout_width="157dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="20dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#3E000000"
    android:elevation="3dp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="451dp"
        android:layout_marginEnd="25dp"
        android:clickable="true"
        android:onClick="AbrirCamara"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:backgroundTint="@android:color/holo_red_light"
        app:srcCompat="@drawable/ic_baseline_camera_24" />

    <TextView
        android:id="@+id/textmenu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="467dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/boton1"
        android:backgroundTint="@color/white"
        android:text="Sacar foto"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textmenu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="533dp"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@+id/boton1"
        android:text="Seleccionar foto"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/boton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:clickable="true"
        android:onClick="SeleccionarImagen"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:backgroundTint="@android:color/holo_red_light"
        app:srcCompat="@drawable/ic_baseline_image_search_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/boton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:clickable="true"
        android:onClick="obtenerUbicacion"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:backgroundTint="@android:color/holo_red_light"
        app:srcCompat="@drawable/ic_baseline_add_location_24" />

    <TextView
        android:id="@+id/textmenu3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="595dp"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@+id/boton1"
        android:text="Agregar ubicaciÃ³n"
        android:textColor="@color/black"
        android:textSize="24sp" />

</RelativeLayout>